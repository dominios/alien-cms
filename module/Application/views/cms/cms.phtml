<div notifications="top right" class="cms-notifications"></div>

<aside class="admin-panel">

    <header class="row admin-heading">
        <div class="col-xs-12">
            <h1>ALiEN CMS <small>v 1.0.0a</small></h1>
            <loader/>
        </div>
    </header>

    <section class="row admin-section user-profile">
        <div class="col-xs-2 col-image">
            <img src="/static/profile.jpg" alt="Profile Image" class="img-circle profile-image">
        </div>
        <div class="col-xs-5 col-name">
            <strong>Admin Name</strong>
            <br>Administrator
        </div>
        <div class="col-xs-5 col-buttons">

            <div class="btn-group btn-group-lg" role="group">
                <button class="btn btn-link">
                    <i class="fa fa-envelope-o text-muted"></i>
                    <span class="label label-pill label-info label-badge">0</span>
                </button>
                <button class="btn btn-link">
                    <i class="fa fa-bell-o active"></i>
                    <span class="label label-pill label-danger label-badge">3</span>
                </button>
                <button class="btn btn-link">
                    <i class="fa fa-sign-out"></i>
                </button>
            </div>

        </div>
    </section>

    <section class="row admin-section page-settings" ng-controller="PageCtrl">

        <header class="col-xs-12">
            <h2>
                Settings <small ng-bind="page.meta.name"></small>
            </h2>
        </header>

        <div class="col-xs-12 page-description">
            <p contenteditable ng-model="page.meta.description" only-text="true"></p>
        </div>

        <div class="col-xs-12 page-options">

            <div class="row">
                <div class="col-xs-5">
                    <strong><i class="fa fa-fw fa-link"></i> Link</strong>
                </div>
                <div class="col-xs-3">
                    <span ng-bind="page.meta.url"></span>
                </div>
                <div class="col-xs-4">
                    <a href="#"><i class="fa fa-fw fa-clone"></i></a>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-5">
                    <strong><i class="fa fa-fw fa-info"></i> Status</strong>
                </div>
                <div class="col-xs-7">
                    <!--span class="label {{viewOptions.statusClass}}" ng-bind="page.meta.status"></span-->

                    <div class="btn-group" uib-dropdown keyboard-nav>
                        <button type="button" class="btn btn-sm btn-{{viewOptions.statusClass}}-outline dropdown-toggle" data-toggle="status-dropdown" aria-haspopup="true" aria-expanded="false" uib-dropdown-toggle>
                            {{page.meta.status}}
                        </button>
                        <div class="dropdown-menu" id="status-dropdown" uib-dropdown-menu>
                            <a ng-repeat="status in viewOptions.availableStatuses" class="dropdown-item" href="#" ng-click="setStatus(status);">{{status}}</a>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-xs-5">
                    <strong><i class="fa fa-fw fa-calendar"></i> Created</strong>
                </div>
                <div class="col-xs-7">
                    {{page.meta.dateCreated | date: 'd.M.yyyy H:mm:ss'}}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-5">
                    <strong><i class="fa fa-fw fa-calendar"></i> Last Update</strong>
                </div>
                <div class="col-xs-7">
                    {{page.meta.dateModified | date: 'd.M.yyyy H:mm:ss'}}
                    <span ng-if="!page.meta.dateModified">N/A</span>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-5">
                    <strong><i class="fa fa-fw fa-globe"></i> Language</strong>
                </div>
                <div class="col-xs-7">
                    N/A
                </div>
            </div>

            <div class="row">
                <div class="col-xs-5">
                    <strong><i class="fa fa-fw fa-tags"></i> Labels</strong>
                </div>
                <div class="col-xs-7">
                    <tags-input ng-model="page.meta.tags">
                </div>
            </div>

        </div>

        <div class="col-xs-12 margin-top-7" ng-if="viewOptions.isHomePage">
            <button class="btn btn-sm btn-success" disabled>
                <i class="fa fa-check"></i> Is home page
            </button>
        </div>

        <div class="col-xs-12 margin-top-7" ng-if="!viewOptions.isHomePage">
            <button class="btn btn-sm btn-primary">
                <i class="fa fa-home"></i> Make <i>{{page.meta.name}}</i> home page
            </button>
        </div>

        <div class="col-xs-12 margin-top-7">

            <div class="btn-group btn-group-sm" role="group">
                <button class="btn btn-primary" ng-click="savePage();">
                    <i class="fa fa-fw fa-save"></i> Save
                </button>
                <button class="btn btn-primary" ng-click="clonePage();">
                    <i class="fa fa-fw fa-copy"></i> Clone
                </button>
                <button class="btn btn-primary" ng-click="deletePage();" ng-if="!viewOptions.isDeleted">
                    <i class="fa fa-fw fa-trash-o"></i> Delete
                </button>
                <button class="btn btn-sm btn-primary" ng-click="restorePage();" ng-if="viewOptions.isDeleted">
                    <i class="fa fa-recycle"></i> Restore page
                </button>
            </div>

        </div>

    </section>

    <section class="row admin-section global-settings">

        <div class="col-xs-12">
            <h2>Global Settings</h2>
        </div>

        <div class="col-xs-12">
            <button class="btn btn-sm btn-primary">
                <i class="fa fa-gears"></i> Show Settings
            </button>
            <button class="btn btn-sm btn-primary">
                <i class="fa fa-question-circle"></i> Need Help?
            </button>
        </div>


    </section>

</aside>